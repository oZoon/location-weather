{
  "compilerOptions": {
    "target": "esnext",
    "noImplicitAny": false,
    "module": "es2015",
    "removeComments": true,
    "strict": true,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictPropertyInitialization": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "react",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}